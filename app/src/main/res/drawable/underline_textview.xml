<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Esto asegura que el fondo es transparente (no afecta el fondo del ListView) -->
    <item>
        <shape >
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente -->
        </shape>
    </item>

    <!-- Raya blanca debajo del TextView -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape >
            <size android:height="2dp"/> <!-- Grosor de la raya -->
            <solid android:color="#FFFFFF"/> <!-- Color de la raya (blanca) -->
        </shape>
    </item>
</layer-list>
