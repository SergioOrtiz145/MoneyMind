<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decisiones del Mes"
            android:textAlignment="center"
            android:textColor="#D9863D"
            android:fontFamily="@font/oswald_variablefont_wght"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#36BF3F"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Tienes $1000 este mes"
                android:textColor="@color/black"
                android:fontFamily="@font/oswald_variablefont_wght"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="¿Qué quieres hacer primero?"
                android:fontFamily="@font/oswald_variablefont_wght"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textoDineroRestante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinero restante: $1000"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="@font/oswald_variablefont_wght"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/opcion_alquiler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background_juego"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/vivienda"
                    android:backgroundTint="#07B0F2"
                    android:contentDescription="Ícono alquiler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagar alquiler\n $400"
                    android:fontFamily="@font/oswald_variablefont_wght"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/opcion_ropa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background_juego"
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/comprarropa"
                    android:background="#07B0F2"
                    android:contentDescription="Ícono alquiler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprar ropa\n $150"
                    android:fontFamily="@font/oswald_variablefont_wght"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/opcion_ahorro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background_juego"
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ahorro"
                    android:backgroundTint="#07B0F2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Ícono alquiler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar en ahorro\n $200"
                    android:fontFamily="@font/oswald_variablefont_wght"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/opcion_comer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background_juego"
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/comer"
                    android:background="#07B0F2"
                    android:contentDescription="Ícono alquiler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salir a comer\n $100"
                    android:fontFamily="@font/oswald_variablefont_wght"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/boton_ver_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver resumen"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#07B0F2"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/oswald_variablefont_wght"/>

        <!-- TextView para mostrar resultado final -->
        <TextView
            android:id="@+id/text_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:fontFamily="@font/oswald_variablefont_wght"/>

    </LinearLayout>
</ScrollView>
